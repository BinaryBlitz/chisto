= form_for [:admin, @laundry] do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :description
    = f.text_area :description, rows: 3, cols: 100, class: 'form-control'

  .form-group
    = f.label :category
    = f.select :category, [['Economy', 'economy'], ['Premium', 'premium']], {}, class: 'form-control'

  .form-group
    = f.label :background_image
    br
    = f.label :background_image, class: 'custom-file' do
      = f.file_field :background_image, class: 'custom-file-input'
      span.custom-file-control
  
  .form-group
    = f.label :logo
    br
    = f.label :logo, class: 'custom-file' do
      = f.file_field :logo, class: 'custom-file-input'
      span.custom-file-control

  .actions
    = f.submit class: 'btn btn-primary'
