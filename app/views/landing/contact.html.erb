<main id="contact" class="container">
  <div class="row">
    <div id="contact-info" class="offset-md-3 col-md-6">
      <h1>Контактная информация</h1>

      <ul class="list-unstyled">
        <li><%= image_tag 'icon-phone.png', alt: 'Phone', width: '42' %>+7 495 766-78-49</li>
        <li><%= image_tag 'icon-mail.png', alt: 'Email', width: '42' %>info@chis.to</li>
      </ul>
    </div>

    <div id="contact-form" class="offset-md-3 col-md-6">
      <h2>Напишите нам</h2>

      <%= form_tag '' do %>
        <div class="form-group">
          <%= label_tag :name, 'Имя и фамилия' %>
          <%= text_field_tag :name, nil, placeholder: 'Евгений Харитонов', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :email, 'Email' %>
          <%= email_field_tag :email, nil, placeholder: 'name@example.com', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :content, 'Комментарий' %>
          <%= text_area_tag :content, nil, placeholder: 'Ваш комментарий', class: 'form-control' %>
        </div>

        <div id="submit-button" class="text-xs-center form-group">
          <%= submit_tag 'Отправить', class: 'btn btn-outline-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</main>
