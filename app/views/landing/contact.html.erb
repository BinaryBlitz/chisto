<main id="contact" class="container">
  <div class="row">
    <div id="contact-info" class="offset-md-3 col-md-6">
      <h1>Контактная информация</h1>

      <ul class="list-unstyled">
        <li><%= image_tag 'icon-phone.png', alt: 'Phone', width: '42' %>+7 999 111-22-33</li>
        <li><%= image_tag 'icon-mail.png', alt: 'Email', width: '42' %>info@chis.to</li>
      </ul>
    </div>

    <div id="contact-form" class="offset-md-3 col-md-6">
      <h2>Напишите нам</h2>

      <form class="" action="index.html" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Имя и фамилия</label>
          <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Имя и фамилия">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="exampleTextarea">Комментарий</label>
          <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Комментарий"></textarea>
        </div>

        <div id="submit-button" class="text-xs-center form-group">
          <button type="submit" class="btn btn-outline-primary">Отправить</button>
        </div>
      </form>
    </div>
  </div>
</main>
